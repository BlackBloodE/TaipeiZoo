<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".view.fragment.PlantFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="16dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="16dp" />

                    <ImageView
                        android:id="@+id/iv_plant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/tv_plantName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="PlantName"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/gl_right"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/iv_plant" />

                    <TextView
                        android:id="@+id/tv_plantNameEn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="PlantNameEn"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toEndOf="@+id/tv_plantName"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/tv_plantName" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="別名"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/gl_right"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/tv_plantNameEn" />

                    <TextView
                        android:id="@+id/tv_alsoKnow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Also Know"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/gl_right"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="簡介"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/gl_right"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/tv_alsoKnow" />

                    <TextView
                        android:id="@+id/tv_brief"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Brief"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/gl_right"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="辨認方式"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/gl_right"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/tv_brief" />

                    <TextView
                        android:id="@+id/tv_feature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Feature"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/gl_right"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/textView9" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="功能性"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/gl_right"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/tv_feature" />

                    <TextView
                        android:id="@+id/tv_funApp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="fun"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toStartOf="@+id/gl_right"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/textView11" />

                    <TextView
                        android:id="@+id/tv_updateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="最後更新："
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/gl_left"
                        app:layout_constraintTop_toBottomOf="@+id/tv_funApp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>